.navigation
  display flex
  justify-content space-between
  margin-bottom 3rem
  padding 2rem 0
  //border-bottom 1px solid $black-light

.navigation-link
  font-size 1rem
  letter-spacing .2rem
  text-decoration none
  text-transform uppercase
  color $black-darker
  line-height 2rem
  position relative
  &:after
    content ''
    height 2px
    position absolute
    bottom 0
    left 0
    right 2px
    background $black-light
