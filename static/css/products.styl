.product-information
  max-width 700px

.product-title
  font-size 2rem
  margin-bottom 1rem

.product-description
  line-height 1.4rem
  margin-bottom 4rem

.product-images
  display flex
  background $black-lightest
  padding 4rem 0

.product-image
  height 330px
  margin-right 2rem
  box-shadow 0px 10px 40px rgba(0, 0, 0, .1)
  filter grayscale(10%)

  &:hover
    filter grayscale(0%)
    cursor pointer
    box-shadow 0px 20px 40px rgba(0, 0, 0, .1)
